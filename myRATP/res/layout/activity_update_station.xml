<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Update_station" >

    <TextView
        android:id="@+id/lbl_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/new_name"
        android:layout_alignBottom="@+id/new_name"
        android:layout_alignParentLeft="true"
        android:text="Nom" />
    
    <TextView
        android:id="@+id/lbl_ligne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/new_ligne"
        android:layout_alignBottom="@+id/new_ligne"
        android:layout_alignParentLeft="true"
        android:text="Ligne" />
    
    <TextView
        android:id="@+id/lbl_localite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/new_localite"
        android:layout_alignBottom="@+id/new_localite"
        android:layout_alignParentLeft="true"
        android:text="LocalitÃ©" />
    
    <TextView
        android:id="@+id/lbl_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/new_latitude"
        android:layout_alignBottom="@+id/new_latitude"
        android:layout_alignParentLeft="true"
        android:text="Latitude" />
    
    <TextView
        android:id="@+id/lbl_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/new_longitude"
        android:layout_alignBottom="@+id/new_longitude"
        android:layout_alignParentLeft="true"
        android:text="Longitude" />
    
    <EditText
        android:id="@+id/new_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:ems="20" />
    
    <EditText
        android:id="@+id/new_ligne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="60dp"
        android:ems="20" />
    
    <EditText
        android:id="@+id/new_localite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="110dp"
        android:ems="20" />
    
    <EditText
        android:id="@+id/new_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="160dp"
        android:ems="20" />
    
    <EditText
        android:id="@+id/new_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="210dp"
        android:ems="20" />

    <Button
        android:id="@+id/btn_new_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_longitude"
        android:layout_below="@+id/new_longitude"
        android:layout_marginTop="30dp"
        android:text="Enregistrer"
        android:ems="7" />

</RelativeLayout>
